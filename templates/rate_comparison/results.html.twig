{% extends 'base.html.twig' %}

{% block title %}Résultats de la Comparaison
{% endblock %}

{% block body %}
	<h1>Résultats de la Comparaison de Taux</h1>

	{% if offers is not empty %}
		<table>
			<thead>
				<tr>
					<th>Banque</th>
					<th>Montant du Prêt</th>
					<th>Durée</th>
					<th>Taux</th>
				</tr>
			</thead>
			<tbody>
				{% for offer in offers %}
					<tr>
						<td>{{ offer.bank_name }}</td>
						<td>{{ offer.loan_amount }}€</td>
						<td>
							{{ offer.loan_duration }}
							ans
						</td>
						<td>
							{{ offer.loan_rate }}
							%
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% else %}
		<p>Aucune offre trouvée pour les critères spécifiés.</p>
	{% endif %}
	<a href="{{ path('compare_rates') }}">Retour à la page de comparaison</a>
	<style>
		/* Styles CSS intégrés */
		body {
			font-family: Arial, sans-serif;
			background-color: #f4f6f8;
			color: #333;
		}

		h1 {
			text-align: center;
			color: #2c3e50;
		}

		table {
			width: 80%;
			margin: 20px auto;
			border-collapse: collapse;
			background-color: #ffffff;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
		}

		table thead {
			background-color: #3498db;
			color: #ffffff;
		}

		table th,
		table td {
			padding: 15px;
			text-align: center;
			border-bottom: 1px solid #ddd;
		}

		table th {
			font-size: 1.1em;
		}

		table tbody tr:nth-child(odd) {
			background-color: #f9f9f9;
		}

		table tbody tr:hover {
			background-color: #f1f1f1;
			cursor: default;
		}

		table tbody td:last-child {
			font-weight: bold;
			color: #e74c3c;
		}

		p {
			text-align: center;
			font-size: 1.1em;
			color: #e74c3c;
		}

		a {
			display: inline-block;
			margin: 20px auto;
			text-align: center;
			padding: 10px 20px;
			color: #3498db;
			background-color: #f4f6f8;
			border: 1px solid #3498db;
			text-decoration: none;
			border-radius: 5px;
			transition: 0.3s ease;
		}

		a:hover {
			color: #f4f6f8;
			background-color: #3498db;
		}
	</style>
{% endblock %}
